@model IEnumerable<DAL.DTO.ProductDto>

@{
    ViewBag.Title = "Index";
}

<h2>All Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductGenericName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductWeight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductGenericName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                <img src="@Url.Content(item.ImagePath)" height="100" width="100" />
            </td>
            <td>
                <button>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button> <br />
                <button>@Html.ActionLink("Details", "Details", new { id = item.Id })</button>   <br />
                <button>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
    }

</table>

@{
    double TotalPages = ViewBag.TotalPage;
    for (int i = 1; i <= TotalPages; i++)
    {
        <ul class="pagination">
            @if (i == ViewBag.CurrentPage)
            {
                <li class="active">
                    @Html.ActionLink(i.ToString(), "Index", new { PagingNbr = i })
                </li>
            }
            else
            {
                <li>
                    @Html.ActionLink(i.ToString(), "Index", new { PagingNbr = i })
                </li>
            }

        </ul>
    }
}
